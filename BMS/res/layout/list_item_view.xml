    <LinearLayout style="@style/ListGrid" >

        <FrameLayout style="@style/ListGridFrameLayout" >

            <ImageView
                android:id="@id/listGridImageView1"
                style="@style/ListGridImageView" />

            <LinearLayout
                android:id="@id/listGridDownloadStatus1"
                style="@style/ListGridMenuLinearLayout" >

                <!-- 下载进度条start -->
                <ProgressBar
                    android:id="@id/download_prssbar1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/listGridProcessbarHeight"
                    android:layout_marginTop="1dip"
                    android:visibility="invisible" />

                <TextView
                    android:id="@id/download_result1"
                    style="@style/ListGridDownloadProcessbarText"/>
                <!-- 下载进度条end -->

                <LinearLayout style="@style/ListGridMenuBlank" />

                <LinearLayout style="@style/ListGridMenu" >

                    <TextView
                        android:id="@id/listGridTextView1"
                        style="@style/ListGridMenuText" />

                    <ImageButton
                        android:id="@id/listGridImageButton1"
                        style="@style/ListGridMenuButton" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

